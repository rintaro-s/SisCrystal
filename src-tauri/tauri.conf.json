{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "SisCrystal",
  "version": "0.1.0",
  "identifier": "com.siscrystal.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "SisCrystal",
        "width": 1920,
        "height": 1080,
        "fullscreen": true,
        "resizable": true,
        "decorations": false,
        "transparent": false,
        "alwaysOnTop": false
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$HOME/**",
          "/usr/share/backgrounds/**",
          "/usr/share/wallpapers/**",
          "/usr/local/share/backgrounds/**",
          "/usr/share/icons/**",
          "/usr/local/share/icons/**",
          "/usr/share/pixmaps/**",
          "/var/lib/AccountsService/icons/**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "appimage"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "linux": {
      "deb": {
        "depends": ["libwebkit2gtk-4.1-0", "libgtk-3-0"]
      }
    }
  }
}
